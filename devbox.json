{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": [
    "colima@latest",
    "docker@latest"
  ],
  "env": {
    "DOCKER_HOST": "unix://${HOME}/.colima/docker.sock"
  },
  "shell": {
    "init_hook": [],
    "scripts": {
      "rebuild": [
        "darwin-rebuild switch --flake ${HOME}/.config/nix-darwin"
      ]
    }
  }
}
